# Render Environment Variables Template
# Copy these to Render Dashboard > Environment

PYTHON_VERSION=3.11.4
APP_NAME=Maritime AI Tutor
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=production
API_V1_PREFIX=/api/v1

# Authentication - Set your own values on Render Dashboard
LMS_API_KEY=your_lms_api_key_here

# Neo4j Aura - Set your own values on Render Dashboard
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# Supabase PostgreSQL - Set your own values on Render Dashboard
DATABASE_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/postgres

# OpenRouter LLM - Set your own values on Render Dashboard
# IMPORTANT: Do NOT commit real API keys to Git!
OPENAI_API_KEY=sk-or-v1-your_openrouter_key_here
OPENAI_BASE_URL=https://openrouter.ai/api/v1
OPENAI_MODEL=x-ai/grok-4.1-fast:free

LOG_LEVEL=INFO
