# Maritime AI Tutor - Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=Maritime AI Tutor
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development  # development, staging, production

# =============================================================================
# API SETTINGS
# =============================================================================
API_V1_PREFIX=/api/v1
API_KEY=your-api-key-here
LMS_API_KEY=secret_key_cho_team_lms
JWT_SECRET_KEY=change-me-in-production-use-strong-random-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# =============================================================================
# DATABASE - POSTGRESQL (Local Docker)
# =============================================================================
# For local development with Docker:
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=maritime
# POSTGRES_PASSWORD=maritime_secret
# POSTGRES_DB=maritime_ai

# =============================================================================
# DATABASE - SUPABASE (Cloud - Production)
# =============================================================================
# For cloud deployment with Supabase:
# DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=

# Supabase API (optional - for direct API access)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# =============================================================================
# DATABASE - NEO4J (Local Docker)
# =============================================================================
# For local development with Docker:
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=neo4j_secret

# =============================================================================
# DATABASE - NEO4J AURA (Cloud - Production)
# =============================================================================
# For cloud deployment with Neo4j Aura:
NEO4J_URI=neo4j+s://xxx.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-aura-password

# =============================================================================
# LLM SETTINGS
# =============================================================================
# For OpenAI direct:
# OPENAI_API_KEY=sk-your-openai-api-key
# OPENAI_MODEL=gpt-4o-mini

# For OpenRouter (OpenAI-compatible):
# OPENAI_API_KEY=sk-or-v1-your-openrouter-key
# OPENAI_BASE_URL=https://openrouter.ai/api/v1
# OPENAI_MODEL=x-ai/grok-4.1-fast:free

OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_BASE_URL=
OPENAI_MODEL=gpt-4o-mini
OPENAI_MODEL_ADVANCED=gpt-4o

# =============================================================================
# MEMORI (Long-term Memory) - Legacy v0.2
# =============================================================================
MEMORI_ENABLED=true
MEMORI_NAMESPACE_PREFIX=user_
MEMORI_NAMESPACE_SUFFIX=_maritime
MEMORI_SUMMARIZE_THRESHOLD=10

# =============================================================================
# SEMANTIC MEMORY (v0.3 - Vector Embeddings)
# =============================================================================
# Gemini Embedding Model with MRL (Matryoshka Representation Learning)
EMBEDDING_MODEL=models/gemini-embedding-001
EMBEDDING_DIMENSIONS=768
SEMANTIC_MEMORY_ENABLED=true
SUMMARIZATION_TOKEN_THRESHOLD=2000

# =============================================================================
# VECTOR STORE (ChromaDB)
# =============================================================================
CHROMA_HOST=localhost
CHROMA_PORT=8000

# =============================================================================
# SECURITY
# =============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","https://lms-hanghaivietnamese.edu.vn"]
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
MASK_PII=true
